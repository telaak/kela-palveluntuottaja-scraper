generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model TherapistSnippet {
  id           Int      @id @default(autoincrement())
  name         String
  location     String
  phoneNumbers String[]
  links        String[]

  @@unique([name, location])
}

model Therapist {
  id           Int           @id @default(autoincrement())
  name         String        @unique
  locations    Location[]
  phoneNumbers Phone[]
  email        String?
  homepage     String?
  languages    Language[]
  orientations Orientation[]
  therapies    Therapy[]
  dateAdded    DateTime      @default(now())
  lastActive   DateTime?
  isActive     Boolean       @default(false)
}

model Location {
  id         Int         @id @default(autoincrement())
  name       String      @unique
  Therapists Therapist[]
}

model Phone {
  id          Int        @id @default(autoincrement())
  number      String
  Therapist   Therapist? @relation(fields: [therapistId], references: [id], onDelete: Cascade)
  therapistId Int?
}

model Language {
  id         Int         @id @default(autoincrement())
  fiFI       String      @unique
  Therapists Therapist[]
}

model Orientation {
  id         Int         @id @default(autoincrement())
  fiFI       String      @unique
  Therapists Therapist[]
}

model Therapy {
  id          Int        @id @default(autoincrement())
  muoto       String
  lajit       String[]
  Therapist   Therapist? @relation(fields: [therapistId], references: [id], onDelete: Cascade)
  therapistId Int?
}

enum Suuntaus {
  PSYKOANALYYTTINEN
  GESTALT                  @map("gestalt-terapia")
  INTEGROIVA
  KOGNITIIVIS_ANALYYTTINEN @map("kognitiivis-analyyttinen")
  KOGNITIIVINEN
  KRIISI_TRAUMA            @map("kriisi- ja traumaterapia")
  MUSIIKKI                 @map("musiikkiterapia")
  NEPSY                    @map("neuropsykologiset häiriöt")
  PARI                     @map("paripsykoterapia")
  PERHE                    @map("perheterapia")
  PSYKODYNAAMINEN
  RATKAISUKESKEINEN
}
