// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Therapist {
  id           Int           @id @default(autoincrement())
  name         String
  phoneNumbers Phone[]
  email        String?       @unique
  homepage     String?
  languages    Language[]
  orientations Orientation[]
  therapies    Therapy[]
  dateAdded    DateTime      @default(now())
}

model Location {
  id   Int    @id @default(autoincrement())
  name String @unique
}

model Phone {
  id          Int        @id @default(autoincrement())
  number      String     @unique
  lastActive  DateTime?
  isActive    Boolean    @default(false)
  Therapist   Therapist? @relation(fields: [therapistId], references: [id], onDelete: Cascade)
  therapistId Int?
}

model Language {
  id          Int         @id @default(autoincrement())
  fiFI        String      @unique
  Therapists  Therapist[]
  therapistId Int?
}

model Orientation {
  id          Int         @id @default(autoincrement())
  fiFI        String      @unique
  Therapists  Therapist[]
  therapistId Int?
}

model Therapy {
  id          Int        @id @default(autoincrement())
  muoto       String
  lajit       String[]
  Therapist   Therapist? @relation(fields: [therapistId], references: [id], onDelete: Cascade)
  therapistId Int?
}

enum Suuntaus {
  PSYKOANALYYTTINEN
  GESTALT                  @map("gestalt-terapia")
  INTEGROIVA
  KOGNITIIVIS_ANALYYTTINEN @map("kognitiivis-analyyttinen")
  KOGNITIIVINEN
  KRIISI_TRAUMA            @map("kriisi- ja traumaterapia")
  MUSIIKKI                 @map("musiikkiterapia")
  NEPSY                    @map("neuropsykologiset häiriöt")
  PARI                     @map("paripsykoterapia")
  PERHE                    @map("perheterapia")
  PSYKODYNAAMINEN
  RATKAISUKESKEINEN
}
